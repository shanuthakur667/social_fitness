<div class="col-md-12">
  <div class="row">
    <h4>Batch:</h4>
    <h4><%=@user.baget%></h4>
  </div>
  <div class="row">
    <h4>Total steps:</h4>
    <h4><%=@user.total_steps%></h4>
  </div>

  <table style="width: 100%;">
    <thead>
       <tr>
         <th>Date</th>
         <th>Step Count</th>
       </tr>
    </thead>

    <tbody>
      <% @workout_sessions.each do |day, ws| %>
        <tr>
          <td><%= day %></td>
          <td><%= ws.pluck(:steps_count).sum %></td>
          <%# end %>
        </tr>
      <% end %>
    <tbody>
  </table>
</div>
